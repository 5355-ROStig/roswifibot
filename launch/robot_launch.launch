<launch>
<!-- sudo chmod a+rwx /dev/ttyS* /dev/ttyACM* ; sh Arret_WifibotServer.sh
-->

<!-- the hokuyo laser node, -120 degrees -> 120 degrees
      sudo chmod a+rwx /dev/ttyACM0 -->
<node pkg="hokuyo_node" type="hokuyo_node" name="hokuyo_node"
      output="screen"/>
<node pkg="tf" type="static_transform_publisher" name="laser2base_broadcaster" output="screen"
      args="0.2 0 0.15  0 0 0  /base_frame /laser 100" />

<!-- Wifibot low level driver -->
<node pkg="roswifibot" type="wifibot_node" name="wifibot_node" required="true"
      output="screen"
      args="_port:=/dev/ttyS0  _entrax:=.39  _relay1:=true"/>
<!-- metric speeds to motor ticks conversion -->
<!--
<remap from= "/twist_in" to="/cmd_vel" />
<remap from="/ticks_out" to="/cmd_speed" />
<node pkg="roswifibot" type="ros_speeds2ticks" name="ros_speed2ticks"
      output="screen"/>
-->

<!-- camera driver -->
<remap from= "/camera/image_raw" to="/image_raw" />
<node pkg="camera1394" type="camera1394_node" name="camera_node" output="screen"
      args="_video_mode:='640x480_rgb8'"/>
</launch>
